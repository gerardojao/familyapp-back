# Runtime (ligera)
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080
# El runtime de ASP.NET en contenedor escucha por defecto en 8080, lo dejamos explícito
ENV ASPNETCORE_URLS=http://0.0.0.0:8080

# Build/publish
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY . .
RUN dotnet restore
RUN dotnet publish -c Release -o /out

# Imagen final (solo runtime + app publicada)
FROM base AS final
WORKDIR /app
COPY --from=build /out .
ENTRYPOI

NT ["dotnet","familyApp.dll"]